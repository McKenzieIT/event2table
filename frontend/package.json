{
  "name": "dwd-generator-app-shell",
  "version": "1.0.0",
  "description": "React application shell for DWD Generator - Gradual migration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:e2e": "bash scripts/run-e2e-tests.sh",
    "test:e2e:ui": "bash scripts/run-e2e-tests.sh --ui",
    "test:e2e:debug": "bash scripts/run-e2e-tests.sh --debug",
    "test:e2e:headed": "bash scripts/run-e2e-tests.sh --headed",
    "test:smoke": "playwright test test/e2e/smoke",
    "test:critical": "playwright test test/e2e/critical",
    "test:contract": "python3 ../test/contract/api_contract_test.py",
    "test:all": "npm run test:unit && npm run test:e2e",
    "verify": "npm run test:unit && npm run test:contract",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-table": "^8.21.3",
    "@testing-library/dom": "^10.4.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@uiw/react-codemirror": "^4.25.4",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.22.0",
    "react-select": "^5.10.2",
    "react-syntax-highlighter": "^16.1.0",
    "reactflow": "^11.10.4",
    "sql-formatter": "^12.2.4",
    "typescript": "^5.9.3",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.27",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
