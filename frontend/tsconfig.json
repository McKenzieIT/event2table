{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* 渐进式迁移配置 - Progressive Migration */
    "allowJs": true,  // 允许导入JS文件
    "checkJs": false,  // 不检查JS文件语法（仅使用JSDoc）
    "incremental": true,  // 增量编译，加速构建

    /* Linting - 渐进式启用 */
    "strict": false,  // 从宽松开始，逐步收紧
    "noUnusedLocals": false,  // 先禁用，后续启用
    "noUnusedParameters": false,  // 先禁用，后续启用
    "noFallthroughCasesInSwitch": true,  // 保持启用
    "noImplicitAny": false,  // 先禁用，逐步启用
    "strictNullChecks": false,  // 先禁用，逐步启用

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@canvas-react/*": ["../canvas-react/src/*"],
      "@shared/*": ["./src/shared/*"],
      "@features/*": ["./src/features/*"],
      "@canvas/*": ["./src/canvas/*"],
      "@event-builder/*": ["./src/event-builder/*"],
      "@analytics/*": ["./src/analytics/*"],
      "@types": ["./src/types"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",  // 包含JS文件以支持JSDoc检查
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}

