import React, { useMemo } from 'react';
import { useQuery } from '@tanstack/react-query';
import { Link } from 'react-router-dom';
import './Dashboard.css';

/**
 * Dashboard Page - WITH DIAGNOSTIC LOGGING
 *
 * 添加详细日志来追踪React hooks调用顺序
 */
function Dashboard() {
  console.log('[Dashboard] RENDER START - Hooks about to be called');

  // Hook 1: useQuery
  console.log('[Dashboard] Calling useQuery hook (1/3)');
  const { data: gamesData } = useQuery({
    queryKey: ['games'],
    queryFn: async () => {
      const response = await fetch('/api/games');
      if (!response.ok) throw new Error('Failed to fetch games');
      return response.json();
    }
  });
  console.log('[Dashboard] useQuery hook called, data:', gamesData);

  const games = Array.isArray(gamesData?.data) ? gamesData.data : [];
  console.log('[Dashboard] games array length:', games.length);

  // Hook 2: useMemo for stats
  console.log('[Dashboard] Calling useMemo for stats (2/3)');
  const stats = useMemo(() => {
    console.log('[Dashboard] useMemo stats callback executing');
    return {
      gameCount: games.length,
      totalEvents: games.reduce((sum, g) => sum + (g.event_count || 0), 0),
      totalParams: games.reduce((sum, g) => sum + (g.param_count || 0), 0),
    };
  }, [games]);
  console.log('[Dashboard] useMemo stats called');

  // Hook 3: useMemo for recentGames
  console.log('[Dashboard] Calling useMemo for recentGames (3/3)');
  const recentGames = useMemo(() => {
    console.log('[Dashboard] useMemo recentGames callback executing');
    return games.slice(0, 5);
  }, [games]);
  console.log('[Dashboard] useMemo recentGames called');

  console.log('[Dashboard] ALL HOOKS CALLED - About to render JSX');

  // Check for early returns (RULE VIOLATION if before hooks!)
  // ✅ No early returns here - all hooks called before any conditional logic

  return (
    <div className="dashboard-container">
      <div className="dashboard-header">
        <h1>Event2Table</h1>
        <p className="text-secondary">欢迎使用Event2Table</p>
      </div>

      {/* Statistics Cards */}
      <div className="stats-grid">
        <div className="stat-card glass-card">
          <div className="stat-icon">
            <i className="bi bi-controller"></i>
          </div>
          <div className="stat-content">
            <h3>{stats.gameCount}</h3>
            <p>游戏总数</p>
          </div>
        </div>

        <div className="stat-card glass-card">
          <div className="stat-icon">
            <i className="bi bi-diagram-3"></i>
          </div>
          <div className="stat-content">
            <h3>{stats.totalEvents}</h3>
            <p>事件总数</p>
          </div>
        </div>

        <div className="stat-card glass-card">
          <div className="stat-icon">
            <i className="bi bi-sliders"></i>
          </div>
          <div className="stat-content">
            <h3>{stats.totalParams}</h3>
            <p>参数总数</p>
          </div>
        </div>

        <div className="stat-card glass-card">
          <div className="stat-icon">
            <i className="bi bi-gear"></i>
          </div>
          <div className="stat-content">
            <h3>HQL</h3>
            <p>脚本生成</p>
          </div>
        </div>
      </div>

      {/* Quick Actions */}
      <div className="quick-actions">
        <h2>快速操作</h2>
        <div className="actions-grid">
          <Link to="/games" className="action-card glass-card">
            <i className="bi bi-plus-circle"></i>
            <h3>管理游戏</h3>
            <p>创建和管理游戏项目</p>
          </Link>

          <Link to="/events" className="action-card glass-card">
            <i className="bi bi-list-task"></i>
            <h3>管理事件</h3>
            <p>配置日志事件</p>
          </Link>

          <Link to="/canvas" className="action-card glass-card">
            <i className="bi bi-diagram-3-fill"></i>
            <h3>HQL画布</h3>
            <p>可视化构建HQL</p>
          </Link>

          <Link to="/flows" className="action-card glass-card">
            <i className="bi bi-flowchart"></i>
            <h3>流程管理</h3>
            <p>管理HQL流程</p>
          </Link>
        </div>
      </div>

      {/* Recent Games */}
      {stats.gameCount > 0 && (
        <div className="recent-section">
          <h2>最近游戏</h2>
          <div className="games-list">
            {recentGames.map(game => (
              <Link
                key={game.gid}
                to={`/events?game_gid=${game.gid}`}
                className="game-item glass-card"
              >
                <div className="game-info">
                  <h3>{game.name}</h3>
                  <p className="text-secondary">GID: {game.gid}</p>
                </div>
                <div className="game-stats">
                  <span className="badge">
                    <i className="bi bi-diagram-3"></i>
                    {game.event_count || 0} 事件
                  </span>
                  <span className="badge">
                    <i className="bi bi-sliders"></i>
                    {game.param_count || 0} 参数
                  </span>
                </div>
              </Link>
            ))}
          </div>
        </div>
      )}
    </div>
  );
}

// 使用React.memo包装，防止不必要的重渲染
export default React.memo(Dashboard);
