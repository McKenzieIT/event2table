{
  "skillName": "event2table-e2e-test",
  "version": "2.0.0",
  "projectRoot": "/Users/mckenzie/Documents/event2table",

  "servers": {
    "frontend": {
      "url": "http://localhost:5173",
      "startCommand": "cd frontend && npm run dev",
      "healthCheckPath": "/"
    },
    "backend": {
      "url": "http://127.0.0.1:5001",
      "startCommand": "python web_app.py",
      "healthCheckPath": "/api/health"
    }
  },

  "databases": {
    "production": "data/dwd_generator.db",
    "testing": "data/test_database.db",
    "development": "data/dwd_generator_dev.db"
  },

  "testing": {
    "defaultModule": "all",
    "timeout": 30000,
    "screenshotOnFailure": true,
    "retryAttempts": 3,
    "mandatoryCoverage": {
      "enabled": true,
      "description": "⚠️ MANDATORY: Every skill invocation MUST test ALL pages and ALL features",
      "requiredPages": [
        "Dashboard (首页)",
        "Games List (游戏列表)",
        "Games Create (创建游戏)",
        "Events List (事件列表)",
        "Events Create (创建事件)",
        "Parameters List (参数列表)",
        "Parameters Dashboard (参数仪表板)",
        "Event Node Builder (事件节点构建器)",
        "Event Nodes Management (事件节点管理)",
        "Canvas (HQL构建画布)",
        "Flows Management (HQL流程管理)",
        "Categories Management (分类管理)",
        "Common Parameters (公参管理)"
      ],
      "requiredFeatures": {
        "navigation": "侧边栏导航、面包屑导航",
        "crud": "创建、读取、更新、删除操作",
        "search": "搜索/过滤功能",
        "forms": "表单验证和提交",
        "modals": "模态框打开/关闭",
        "buttons": "所有可点击按钮",
        "dataDisplay": "数据列表、统计卡片、分页",
        "apiCalls": "验证API调用状态（200/400/404/500）",
        "console": "检查JavaScript错误",
        "performance": "测量页面加载性能"
      },
      "checklist": [
        "✅ 测试所有页面的页面加载",
        "✅ 测试所有页面的控制台错误",
        "✅ 测试所有按钮和链接的点击",
        "✅ 测试所有表单的填写和提交",
        "✅ 测试所有搜索/过滤功能",
        "✅ 测试所有模态框的打开/关闭",
        "✅ 测试所有API调用的状态",
        "✅ 测试所有统计数据的显示",
        "✅ 验证所有交互元素的实际功能（不仅仅是存在）",
        "✅ 记录所有发现的问题（P0/P1/P2/P3）"
      ]
    },
    "isolation": {
      "mode": "smart",
      "autoCleanup": true,
      "preserveGIDs": [10000147]
    },
    "testGIDRange": {
      "start": 90000000,
      "end": 99999999
    }
  },

  "modules": {
    "analytics": {
      "name": "Analytics Module",
      "configFile": "analytics-tests.json",
      "testCount": 30
    },
    "event-builder": {
      "name": "Event Builder Module",
      "configFile": "event-builder-tests.json",
      "testCount": 20
    },
    "canvas": {
      "name": "Canvas Module",
      "configFile": "canvas-tests.json",
      "testCount": 15
    }
  },

  "output": {
    "reportsPath": "output/reports",
    "screenshotsPath": "output/screenshots",
    "tracesPath": "output/traces",
    "formats": ["markdown", "json"],
    "keepHistory": true,
    "maxHistorySize": 100
  },

  "performance": {
    "enabled": true,
    "baseline": "data/performance-baseline.json",
    "threshold": 0.2,
    "metrics": ["LCP", "FID", "CLS", "pageLoadTime", "apiResponseTime"]
  },

  "quality": {
    "enabled": true,
    "dimensions": {
      "testCoverage": 0.25,
      "testPassRate": 0.25,
      "performanceScore": 0.20,
      "codeQuality": 0.15,
      "securityScore": 0.10,
      "accessibilityScore": 0.05
    },
    "targets": {
      "overall": 85,
      "testCoverage": 80,
      "testPassRate": 95,
      "performance": 90
    }
  },

  "ai": {
    "testGeneration": {
      "enabled": true,
      "maxTestsPerPage": 20,
      "includeBoundaryTests": true
    },
    "defectPrediction": {
      "enabled": true,
      "lookbackDays": 30
    }
  }
}
