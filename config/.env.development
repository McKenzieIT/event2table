# DWD Generator - Development Environment Configuration
# 此文件用于开发环境的配置
# 使用方式: export FLASK_ENV=development

# ============================================================================
# 环境标识
# ============================================================================
ENVIRONMENT=development
FLASK_ENV=development

# ============================================================================
# 数据库配置
# ============================================================================
# 开发环境使用独立的开发数据库
# 位置: dwd_generator_dev.db
DEV_DATABASE_PATH=dwd_generator_dev.db

# ============================================================================
# Flask 配置
# ============================================================================
FLASK_SECRET_KEY=dev-secret-key-change-in-production
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=True

# ============================================================================
# 日志配置
# ============================================================================
LOG_LEVEL=DEBUG

# ============================================================================
# 缓存配置 - 开发环境使用简单缓存
# ============================================================================
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# 安全配置 - 开发环境可以放宽
# ============================================================================
RATELIMIT_ENABLED=False
SESSION_COOKIE_SECURE=False

# ============================================================================
# 开发工具配置
# ============================================================================
# 启用详细错误页面
DEBUG=True

# 允许CORS (用于前端开发)
CORS_ENABLED=True
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# 文件上传配置
MAX_CONTENT_LENGTH=32MB
