# DWD Generator - Production Environment Configuration
# 此文件用于生产环境的配置
# 使用方式: export ENVIRONMENT=production

# ============================================================================
# 环境标识
# ============================================================================
ENVIRONMENT=production
FLASK_ENV=production

# ============================================================================
# 数据库配置
# ============================================================================
# 生产环境使用主数据库
# 位置: dwd_generator.db
PROD_DATABASE_PATH=dwd_generator.db

# ============================================================================
# Flask 配置
# ============================================================================
# ⚠️  警告: 必须在生产环境设置强密钥
FLASK_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_RANDOM_KEY
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=False  # ⚠️ 生产环境必须关闭调试模式

# ============================================================================
# 日志配置
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# 缓存配置 - 生产环境使用Redis
# ============================================================================
CACHE_TYPE=RedisCache
CACHE_DEFAULT_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# ⚠️  生产环境建议设置Redis密码
REDIS_PASSWORD=

# ============================================================================
# 安全配置 - 生产环境必须启用
# ============================================================================
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour
SESSION_COOKIE_SECURE=True  # HTTPS only
SESSION_COOKIE_SAMESITE=Lax

# ============================================================================
# 性能配置
# ============================================================================
# 缓存TTL配置
CACHE_TIMEOUT_STATIC=3600      # 静态数据1小时
CACHE_TIMEOUT_SEMI_STATIC=1800  # 半静态30分钟
CACHE_TIMEOUT_DYNAMIC=300      # 动态5分钟
CACHE_TIMEOUT_REALTIME=60      # 实时1分钟

# ============================================================================
# 监控和日志
# ============================================================================
# 建议集成外部监控服务
# SENTRY_DSN=
# LOG_FILE_PATH=/var/log/dwd_generator/app.log
