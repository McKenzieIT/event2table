# DWD Generator - Test Environment Configuration
# 此文件用于测试环境的配置
# 使用方式: export FLASK_ENV=testing

# ============================================================================
# 环境标识
# ============================================================================
ENVIRONMENT=test
FLASK_ENV=testing

# ============================================================================
# 数据库配置
# ============================================================================
# 测试环境使用独立的测试数据库
# 位置: tests/test_database.db
TEST_DATABASE_PATH=tests/test_database.db

# ============================================================================
# Flask 配置
# ============================================================================
FLASK_SECRET_KEY=test-secret-key-for-testing-only
FLASK_HOST=127.0.0.1
FLASK_PORT=5001
FLASK_DEBUG=True

# ============================================================================
# 日志配置
# ============================================================================
LOG_LEVEL=DEBUG

# ============================================================================
# 缓存配置 - 测试环境禁用缓存
# ============================================================================
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=60
REDIS_URL=redis://localhost:6379/1  # 使用不同的DB避免污染

# ============================================================================
# 安全配置 - 测试环境可以放宽
# ============================================================================
RATELIMIT_ENABLED=False
SESSION_COOKIE_SECURE=False

# ============================================================================
# 测试特定配置
# ============================================================================
# 允许测试中使用较低的密码强度
TEST_MODE=True

# 允许测试时覆盖数据库
TEST_DATABASE_OVERWRITE=True
