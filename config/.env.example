# DWD Generator Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=false

# Security Configuration
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting Configuration
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=memory://  # Use redis:// for production

# Logging Configuration
LOG_LEVEL=INFO

# Database Configuration (Optional - defaults will be used if not specified)
# DB_PATH=./dwd_generator.db
# UPLOAD_DIR=./uploads
# OUTPUT_DIR=./output

# Common Parameter Configuration
COMMON_PARAM_THRESHOLD_RATIO=0.5  # Parameters appearing in 50%+ of events are considered common
